{
  "JwtOptions": {
    "Issuer": "ProjectManagementAPI",
    "Audience": "http://192.168.1.4:5000",
    "SecurityKey": "V3rySecur3Pr0jectManagementSecuriryK3y"
  },
  // [ "https://localhost:5001", "http://192.168.1.4:5000" ],
  "ConnectionStrings": {
    "DefaultConnectionString": "server=(localdb)\\mssqllocaldb;database=ProjectManagement;Integrated Security=true;TrustServerCertificate=true"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "OutputTemplate": "[{Timestamp:HH:mm:sss} {Level:u11} {Message:lj}{NewLine}]"
        }
      },
      {
        "Name": "File",
        "Args": {
          "Path": "logs/log-.txt",
          "RollingInterval": "Day",
          "OutputTemplate": "[{Timestamp:HH:mm:ss} {Level:u11} {Message:lj}{NewLine}]"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
